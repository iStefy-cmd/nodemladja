<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <style>
      body {
        background-color: lightgreen;
      }
      .transaction-form {
        margin-bottom: 50px;
        display: grid;
        margin-top: 50px;
        border-radius: 20px;
        border: 2px solid black;
        grid-template-columns: 25%25%25%25%;
        padding-block: 20px;
        row-gap: 20px;
        text-align: center;
        font-size: 18px;
        background-color: #00c853;
      }
      .transaction-form input {
        border-radius: 5px;
        height: 30px;
        border: none;
      }

      .transaction-form button,
      .transaction-form a {
        cursor: pointer;
        width: 220px;
        padding-block: 4px;
        border-radius: 12px;
        margin: auto;
        background-color: darkgreen;
        color: white;
        text-decoration: none;
        font-size: 18px;
        border: 1px solid green;
      }
      .notificationButton {
        z-index: 10;
        transition: 0.6s ease;
        padding: 4px 20px;
        position: absolute;
        top: 7px;
        right: 10px;
        background-color: white;
        color: black;
        border: 4px solid grey;
        border-radius: 4px;
        font-size: 17px;
        cursor: pointer;
      }
      
      .move {
        color: white;
        font-weight: bold;
        top: 2px;
        right: 5px;
        margin-top: 2px;
        border: 4px solid rgb(255, 0, 0);
        padding: 7px 26px;
        background-color: red;
        transition: 0.6s ease;
      }
      .transaction-form a {
        font-size: 20px;
      }
      .users-holder {
        display: grid;
        grid-template-columns: 20%20%20%20%20%;
      }
      .users-holder a div {
        display: flex;
        justify-content: center;
        background-color: #00c853;
        width: 250px;
        height: 70px;
        text-align: center;
        font-size: 15px;
        border: 2px solid black;
        border-radius: 15px;
      }
      .logout-form {
        position: absolute;
        top: 7px;z-index: 10;
        left: 10px;
      }.charging-container {
        position: absolute;
        top: 22px;
        left: 50px;
  width: 1800px;z-index: 1;
  height: 4px;border: 1px solid rgba(0, 0, 0, 0.113);
  background-color: #ffffff58;
  overflow: hidden;
}
.none{
  display: none;
}
.charging-bar {
  height: 100%;
  background-color: #ff0000;
  width: 0;
  transition: width 0.6s ease-in-out;
}

      .logout-form button {
        
        cursor: pointer;
        width: 220px;
        padding-block: 4px;
        border-radius: 12px;
        margin: auto;
        background-color: darkgreen;
        color: white;
        text-decoration: none;
        font-size: 18px;
        border: 2px solid black;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="dynamic"> </form>
        <div class="logout-form">
          <form action="/logout" method="POST">
            <button
              style="
                background-color: rgb(218, 58, 58);
                color: rgb(255, 255, 255);
              "
              type="submit"
            >
              Logout
            </button>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
          </form></div>
          <div class="charging-container">
            <div id="charging-bar" class="charging-bar"></div>
          </div>
          <button class="notificationButton">Prikazi zahteve</button></div>
      
      <div
        id="notificationContainer"
        class="none"
        style="
          position: absolute;
          top: 37px;
          right: 40px;
          background-color: white;
          
          border: 1px solid #ccc;
          padding: 10px;
          max-width: 500px;
          margin-top: 10px;
        "
      >
        <h2>Notifications</h2>
        <ul
          id="notificationList"
          style="list-style-type: none; padding: 0"
        >
      <%if(requests && requests[0]){%>
        <%requests.forEach(req=>{%>
          <div class="request">
            <p class="name"><%=req.name%></p>
           <p class="type"> <%=req.type%></p>
            <p class="description"><%=req.description%></p>
            <p class="quantity"><%= req.quantity%></p>
            <p class="price"><%= req.price%></p>
            <p class="deposit"><%= req.deposit%></p>
            
            <input type="hidden" class="_csrf" name="_csrf" value="<%= csrfToken%>">
            <input type="hidden" class="transactionID" name="transactionID" value="<%=req._id%>">
            <input type="hidden" class="userID" name="userID" value="<%= req.userID%>">
            <button onclick="approveTransaction(this)">✔️</button>
            <button onclick="rejectTransaction(this)">❌</button>
          </div>
          
          <%})%>
        
        
        
        <%}else{%>
        <h2>No requests :D</h2>
        <%}%>
      
      </ul>
      </div>
      <script>
        const chargingBar = document.getElementById('charging-bar');



        setInterval(() => {
          chargingBar.style.width = '100%';
         setTimeout(() => {
          document
            .querySelector(".notificationButton")
            .classList.toggle("move");
         }, 450);
           
          setTimeout(() => {
           
             
            chargingBar.style.width = '0';
          }, 800);
          setTimeout(() => {
            document
              .querySelector(".notificationButton")
              .classList.toggle("move");
          }, 1250);
        }, 20000);
      </script>
      <script>

        let isShowingNotifications = false;

        // Function to display or hide notifications
        function toggleNotifications() {
          const container = document.getElementById("notificationContainer");
          const list = document.getElementById("notificationList");
         container.classList.toggle("none");

        }

        // Add event listener to the button
        const button = document.querySelector(".notificationButton");
        button.addEventListener("click", toggleNotifications);
      </script>
      <div class="form">
        <form
          class="transaction-form"
          action="/admin/post-add-transaction"
          method="POST"
        >
          <div>
            <label for="name">Ime</label> <input type="text" name="name" />
          </div>
          <div>
            <label for="type">Roba</label> <input type="text" name="type" />
          </div>
          <div>
            <label for="quantity">Kolicina</label>
            <input type="text" name="quantity" />
          </div>
          <div>
            <label for="price">Cena</label> <input type="text" name="price" />
          </div>

          <div></div>
          <button type="submit">Potvrdi</button>
          <a href="/admin/transactions">Transakcije</a>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
       
        </div>
      </div>
      <% if(names&& names[0]) { %>
      <div class="users-holder">
        <% names.forEach(name=>{ %>
        <a
          href="/admin/user/<%= name %>"
          style="text-decoration: none; color: black"
          ><div><h1><%= name %></h1></div></a
        >
        <%})%>
      </div>
      <%} else {%>
      <h1>no users :/ <%= names%></h1>
      <% }%>

      <div></div>
    </header>
  </body>
</html>

<script src="/js/admin.js"></script>